<%- include('../layouts/head.ejs') %>
    <div class="d-flex justify-content-center align-items-center my-container">
        <div style="width: 450px; border-radius: 10px; background-color: rgb(253, 249, 243);box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;" class="py-4 px-5">
            <h4 class="text-center fw-bold my-3">Create A New Account</h4>
            <form action="/auth/signup" method="post">
                <div class="form-group my-2">
                    <label>Enter Your UserName</label>
                    <input type="text" class="form-control" name="username">
                </div>
                <div class="form-group my-2">
                    <label>Enter Your Valid Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group my-2">
                    <label>Enter Your Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group my-2">
                    <label>Confirm Your Password</label>
                    <input type="password" class="form-control" name="confirmPassword">
                </div>
                <input type="submit" class="btn btn-primary btn-sm" value="SignUp"> 
               <div class="mt-3">
                <a style="font-size: 14px;" href="/auth/login" class="text-center">Have an account? Login here</a>
               </div>
            </form>
        </div>
    </div>

    <%- include('../layouts/footer.ejs') %>
        </body>

        </html>